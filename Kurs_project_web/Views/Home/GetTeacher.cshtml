
@{
    ViewBag.Title = "Преподаватели";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model DAL.Models.Teacher
@using DAL
<div id="center">
    <div id="title">
        &nbsp;Информация о сотруднике
    </div>

    <div id="text">
        
        <div id="image">
            <table cellpadding="0" cellspacing="0" align="left">
                <div id="image_pict">
                    <tr id="image_table">
                        <td>
                            <img src="~/@Model.imgPath" alt="@Model.FIO"
                                 style="width: 240px; height: 300px">
                        </td>
                    </tr>
                    <tr id="postimage_table">
                        <td colspan="3"></td>
                        <td></td>
                    </tr>
                </div>
            </table>
        </div>
        @{ 

            var prevId = (new UnitOfWorkAdmin()).Teachers.GetAll().Where(r=>r.Id < Model.Id).FirstOrDefault();
            var nextId=(new UnitOfWorkAdmin()).Teachers.GetAll().Where(r => r.Id > Model.Id).FirstOrDefault();
        }
        <div align="center">
            <table border="0" style="margin-top: 7px">
                <tr style="background-color: transparent; font-size: 10pt; color: black">
                    <td width="120" align="left">
                        @if (prevId != null)
                        {
                        <a href="/Home/GetTeacher?id=@prevId.Id"><<< Назад</a>
                        }
                    </td>
                    <td width="120" align="right">
                        @if (nextId != null)
                        {
                            <a href="/Home/GetTeacher?id=@nextId.Id">Вперед >>></a>
                        }
                    </td>
                </tr>
            </table>
            @{
                var fio = Model.FIO.Split(' ');
                string middlename = "", lastname = "";
                if (fio.Length == 2) { middlename = fio[1]; }
                if (fio.Length == 3) { lastname = fio[2]; }
            }
            <br><br><span style="font-size: 12pt">
                <b>
                    <p style="margin-top: 10px; padding-left: 10px">@fio[0]</p>
                    <p align="center">@middlename</p>
                    <p align="center">@lastname</p>
                </b>
            </span>
            <br>
            <i>@Model.Job ,<br>@Model.Degree</i><br>
    <br>
</div>
<br><br>
<div id="employee_info">
    @Model.Information
    <br>
</div>
<br>
<div align="left">

</div>

</div>
    </div>



