@model IEnumerable<DAL.Models.Teacher>

@{
    ViewBag.Title = "Index";
}

<h2>Преподаватели</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Job)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Degree)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FIO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Job)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Degree)
        </td>
        <td>
            <a href="/Teachers/Edit?id=@item.Id">Edit</a> |
            <a href="/Teachers/Delete?id=@item.Id">Delete</a> 
        </td>
    </tr>
}

</table>
