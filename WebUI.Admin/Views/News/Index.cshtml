@model IEnumerable<DAL.Web.Site.Models.News>

@{
    ViewBag.Title = "Index";
}

<h2>Новости</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Header)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentDate)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Header)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentDate)
        </td>
        
        <td>
            <a href="/News/Edit?id=@item.Id">Edit</a> |
            <a href="/News/Delete?id=@item.Id">Delete</a> 
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Главное меню", "Index", "Admin")
</div>