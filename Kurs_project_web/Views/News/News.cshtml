@model IEnumerable<DAL.Web.Site.Models.News> 
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="news-header">Новости</h2>


<div class="masonry">
    <ul class="news-container">
        @{
            if (Model.Count() == 0)
            {
                <li>Новых новостей нет</li>
            }
            else
            {

                foreach (var item in Model)
                {
                    <li>
                        <div class="item-news">
                            <img src=@Html.DisplayFor((modelItem => item.imgPath))>
                            <strong>@Html.DisplayFor((modelItem => item.CurrentDate))</strong>
                            <h4><a href="#">@Html.DisplayFor(modelItem => item.Header)</a></h4>
                            @Html.DisplayFor(modelItem => item.Content)
                        </div>
                    </li>
                    <li id="news"><a href="~/News/GetNews?id=@item.Id">Подробнее</a>  </li>
                }
            }
        }
    </ul>

</div>