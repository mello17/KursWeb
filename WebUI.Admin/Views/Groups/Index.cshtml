@model IEnumerable<DAL.Models.Group>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Group_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count_Of_Student)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Group_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count_Of_Student)
        </td>
        <td>
            <a href="/Groups/Edit?id=@item.Id">Edit</a> |
            <a href="/Groups/Delete?id=@item.Id">Delete</a> 
        </td>
    </tr>
}

</table>
