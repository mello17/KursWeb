@model IQueryable<DAL.Web.Site.Models.News> 
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>News</h2>
<ul>
    @{
        if (Model.Count() == 0)
        {
            <li>Новых новостей нет</li>
        }
        else
        {
        foreach (var item in Model)
                  {
                <li>
                    <span><img src=@Html.DisplayFor((modelItem => item.imgPath))></span>
                    <strong>@Html.DisplayFor((modelItem => item.CurrentDate))</strong>
                    <h4><a href="#">@Html.DisplayFor(modelItem => item.Header)</a></h4>
                    @Html.DisplayFor(modelItem => item.Content)
                </li>
                  }
            }
        }
</ul>